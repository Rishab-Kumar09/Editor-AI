{
  "name": "clipjs",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "node scripts/post-build.js",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "next build && node scripts/post-build.js && electron-builder",
    "build:win": "next build && node scripts/post-build.js && electron-builder --win"
  },
  "build": {
    "appId": "com.editorai.app",
    "productName": "Editor AI",
    "asar": false,
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "!**/*.{map,md}",
      "!node_modules"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Editor-AI-Setup.exe"
    },
    "compression": "normal",
    "electronLanguages": [
      "en-US"
    ]
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "*",
    "@ffmpeg/util": "*",
    "@reduxjs/toolkit": "^2.7.0",
    "@remotion/media-parser": "^4.0.290",
    "@remotion/player": "^4.0.290",
    "@types/node": "20.4.9",
    "@types/react": "^18.3.20",
    "@types/react-dom": "18.2.7",
    "@types/uuid": "^10.0.0",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "10.4.14",
    "basehub": "^8.2.11",
    "electron-store": "^11.0.2",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.13",
    "idb": "^8.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.503.0",
    "moveable": "^0.53.0",
    "next": "^14.2.30",
    "next-themes": "^0.4.6",
    "openai": "^6.7.0",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-moveable": "^0.56.0",
    "react-redux": "^9.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.1"
  }
}
